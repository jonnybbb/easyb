<ivysettings>
  <conf defaultResolver="chained"/>
  <resolvers>
		<chain name="chained" returnFirst="true">
      <filesystem name="libraries">
        <artifact pattern="${ivy.conf.dir}/repository/[artifact]-[revision].[type]" />
      </filesystem>
      <url name="easybrepo">
				<artifact
					pattern="http://www.easyb.org/repo/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
			<ibiblio name="ibiblio" />
		</chain>
	</resolvers>
</ivysettings>